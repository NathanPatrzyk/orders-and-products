generator client {
  provider     = "prisma-client-js"
}

datasource db {
  provider     = "sqlite"
  url          = env("DATABASE_URL")
}

model Order {
  id        Int       @id @default(autoincrement())
  status    String

  created   DateTime  @default(now())
  
  products  Product[]
}

model Product {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  price       Float
  quantity    Int
  
  created   DateTime  @default(now())

  orderId   Int
  order     Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
}